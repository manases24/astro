---
interface Props {
  name: string;
  url: string;
  isBig?: boolean;
}

const { name, url, isBig = false } = Astro.props;
const id = url.split("/").at(-2);
const imageSrc = `https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/other/official-artwork/${id}.png`;
---

<!-- Estilos condicionales -->
<a
  class:list={[
    `rounded border flex flex-col justify-center items-center p-2`,
    { border: !isBig },
  ]}
  href={`/pokemons/${name}`}
>
  <!--  transition:name -> https://docs.astro.build/en/guides/view-transitions/#naming-a-transition  -->
  <img
    transition:name={`${name}-image`}
    class:list={[{ "w-26 h-26": isBig, "w-22 h-22": !isBig }]}
    src={imageSrc}
    alt={name}
  />
  <span class:list={["capitalize", { "text-4xl text-blue-300": isBig }]}
    >#{id} {name}</span
  >
</a>
