<MainLayout>
  <section
    class="flex flex-col items-center justify-center h-screen text-center px-4"
  >
    <div class="mb-6">
      <svg
        width="80"
        height="80"
        viewBox="0 0 261.76 226.69"
        xmlns="http://www.w3.org/2000/svg"
        fill="currentColor"
        class="text-green-500"
