        <path
          d="M33.85 0L130.88 160.77 227.91 0h33.85l-130.88 226.69L0 0h33.85z"
        ></path>
        <path
          d="M33.85 0L130.88 160.77 227.91 0h-55.09L130.88 96.85 88.94 0H33.85z"
        ></path>
