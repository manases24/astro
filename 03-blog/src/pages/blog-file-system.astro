---
import BlogPost from "../components/BlogPost.astro";
import { siteInfo } from "../consts/site-info";
import MainLayout from "../layouts/MainLayout.astro";

const posts = await Astro.glob("./posts-old/*.{md,mdx}");
---

<!-- https://docs.astro.build/en/guides/markdown-content/ -->
<MainLayout title="Evan You Blog's">
  <section class="bg-white dark:bg-gray-900">
    <div class="container px-6 py-10 mx-auto">
      <h1
        class="text-3xl font-semibold text-gray-800 capitalize lg:text-4xl dark:text-white"
      >
        {siteInfo.title}
      </h1>

      <div class="grid grid-cols-1 gap-8 mt-8 md:mt-16 md:grid-cols-2">
        {posts.map((post) => <BlogPost {...post} />)}
      </div>
    </div>
  </section>
</MainLayout>
